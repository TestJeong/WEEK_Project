{
  "compilerOptions": {
    "typeRoots": ["./@type"],
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017", "dom", "dom.iterable", "es6", "scripthost"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "baseUrl": "./src",
    "declaration": false,
    "noImplicitAny": false,
    "paths": {
      "@homeScreen/*": ["pages/homeScreen/*"],
      "@calendarScreen/*": ["pages/calendarScreen/*"],
      "@/*": ["./*"],
      "@Components/*": ["Components/*"],
      "@navgation/*": ["navgation/*"],
      "@modules/*": ["modules/*"],
      "@db/*": ["db/*"],
      "@utils/*": ["utils/*"],
      "@images/*": ["assets/img*"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
